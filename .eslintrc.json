{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },

    "extends": [
        "standard"
    ],

    "plugins": [],
    "env": {
      "node": true
    },
    "rules": {
        "indent": ["error", 2],
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "semi": "error",
        "no-underscore-dangle": "off",
        "global-require": "off",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "jsx-a11y/href-no-hash": "off"
    }
}